            </td>
            <td>
                @Model.TotalCount
            </td>
        </tr>
        <tr>
            <td>
                شکستن
            </td>
            <td>
                @if(Model.Correction.BreakFromVerse1VOrder != null)
                {
                    <span class="background-red color-white">دارد</span>
                }
                else
                {
                    <text>ندارد</text>
                }
            </td>
        </tr>

        <tr>
            <td colspan=2>
                <a role="button" onclick="checkAllNotCorrect(@Model.Verses.Count)" class="pagebutton">درست نیست</a>
