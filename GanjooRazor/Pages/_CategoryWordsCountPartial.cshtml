@model GanjooRazor.Pages._CategoryWordsCountPartialModel
@using DNTPersianUtils.Core
@{
}

@if (Model.WordCounts.Length > 0)
{
    <div class="related-images-frame" id="wordcounts">
        <div class="century" id="wordcounts-section-controller">
            بسامد واژگان <a role="button" class="w3tooltip cursor-pointer" onclick="switch_section('wordcounts-section', 'wordcounts-section-collapse-button')"><i class="info-buttons expand_circle_down" id="wordcounts-section-collapse-button"></i><span class="w3tooltiptext">جمع شود / باز شود</span></a>
        </div>
        <div id="wordcounts-section">
            <p>
                در متن @Model.ThisPart @RMuseum.Services.Implementation.LanguageUtils.FormatMoney(Model.TotalWordCount) واژه را شمرده‌ایم (در تعریفمان از واژه ایرادات جدی وجود دارد، <a href="https://blog.ganjoor.net/1403/04/06/words-frequency/" target="_blank">اینجا</a> را ببینید). شمار واژگان یاد شده به شکل غیرتکراری برابر با @RMuseum.Services.Implementation.LanguageUtils.FormatMoney(Model.UniqueWordCount) واژه است.
            </p>
            <div class="clear-both">
                <input type="text" id="wordcountterm" placeholder="جستجوی واژه" value="" onkeyup="onSearchWordCounts(@Model.CatId, @Model.PoetId, @Model.TotalWordCount)">
            </div>
            <div id="wordcounts-table">
                <partial name="_CategoryWordsCountTablePartial" model="Model.TableModel">
            </div>
        </div>
    </div>
}