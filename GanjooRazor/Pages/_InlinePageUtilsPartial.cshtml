                    </div>
                    <span class="w3tooltiptext">
                        بسامد واژگان
                    </span>
                </a>

            }

            @if
           (
           (Model.GanjoorPage != null && Model.GanjoorPage.Poem != null && Model.GanjoorPage.Poem.Recitations.Where(a => a.RecitationType == RMuseum.Models.GanjoorAudio.RecitationType.Normal).Any())
